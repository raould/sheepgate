{
	"compilerOptions": {
		"pretty": false,
		"sourceMap": true,
		"target": "ES2019",
		"esModuleInterop": true,
		"rootDir": "src",
		"outDir": "out",
		"module": "commonjs",
		"removeComments": true,
		"types": [
			"reflect-metadata"
		],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noErrorTruncation": true,
		"strict": true
	},
	"exclude": [
		"node_modules"
	]
}